{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++ 调试", //cpp改为g++，任务名称，与launch.json的preLaunchTask相对应
            "command": "C:\\mingw64\\bin\\g++.exe", //g++
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}